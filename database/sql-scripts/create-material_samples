--create material samples table

CREATE TABLE `material_samples` (
  `sample_no` varchar(15) NOT NULL,
  `sample_name` varchar(45) DEFAULT NULL,
  `material_name` varchar(45) DEFAULT NULL,
  `no_samples` int DEFAULT NULL,
  `description` varchar(10000) DEFAULT NULL,
  `RGBimage` varchar(100) DEFAULT NULL,
  PRIMARY KEY (`sample_no`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci